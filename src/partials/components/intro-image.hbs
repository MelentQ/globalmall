<section class="intro-image {{#if topTitle}}intro-image--top-title{{/if}}">
  <div class="intro-image__header">
    <picture>
        <source srcset="{{introImageMobile}}" media="(max-width: 576px)">
        <img class="lazyload intro-image__image" src="{{introImage}}" alt="Фон">
    </picture>
    <div class="intro-image__overlay"></div>
    <div class="container intro-image__header-inner">
      <div class="intro-image__header-block">
        <nav class="breadcrumbs__list">
          {{#each breadcrumbs}}
          <a href="{{this.link}}">{{this.name}}</a>
          {{/each}}
        </nav>
        {{#if download}}
          {{>dowload-file}}
        {{/if}}
      </div>
      <div class="intro-image__title-container js-title">
        <h1 class="intro-image__title">{{name}}</h1>
        {{#if description}}
        <div class="intro-image__description editable-text-container">
          {{{description}}}
        </div>
        {{else}}
        {{/if}}
      </div>
    </div>
  </div>
</section>